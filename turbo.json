{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "backend/.env", "frontend/.env"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "JWT_SECRET",
        "NODE_ENV",
        "HASH_ROUNDS",
        "DATABASE_URL",
        "AUTH_URL",
        "API_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["frontend/.env"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["frontend/.env"]
    }
  }
}
